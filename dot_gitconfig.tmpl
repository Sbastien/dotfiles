[core]
    editor = nvim
    excludesFile = ~/.gitignore
    autocrlf = input
    pager = delta

[init]
    defaultBranch = main

[color]
    ui = auto

[diff]
    colorMoved = default
    algorithm = histogram

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    line-numbers = true
    side-by-side = true
    syntax-theme = OneHalfDark
    plus-style = "syntax #1e3a2f"
    minus-style = "syntax #3a1e1e"
    plus-emph-style = "syntax #2e5a4a"
    minus-emph-style = "syntax #5a2e2e"
    line-numbers-left-style = "#5c6370"
    line-numbers-right-style = "#5c6370"
    line-numbers-minus-style = "#e06c75"
    line-numbers-plus-style = "#98c379"
    file-style = "bold #61afef"
    file-decoration-style = "#61afef ul"
    hunk-header-style = "#c678dd"
    hunk-header-decoration-style = "#5c6370 box"
    commit-decoration-style = "bold #e5c07b box ul"
    blame-code-style = syntax
    blame-palette = "#1e2127 #282c34 #3e4451"
    hyperlinks = true
    hyperlinks-file-link-format = "vscode://file/{path}:{line}"

[delta "unified"]
    side-by-side = false

[merge]
    conflictstyle = zdiff3

[rerere]
    enabled = true

[rebase]
    autoSquash = true
    autoStash = true

[pull]
    rebase = true

[push]
    default = simple
    autoSetupRemote = true

[fetch]
    prune = true

[alias]
    # Status & Info
    s = status

    # Branch & Checkout
    co = checkout
    cob = checkout -b
    br = branch

    # Commit
    cm = commit -m
    c = commit
    amend = commit --amend --no-edit
    wip = commit -m "WIP"
    fixup = commit --fixup

    # Add
    a = add
    aa = add .

    # Push & Pull
    p = push
    pl = pull
    pr = pull --rebase
    up = !git fetch origin && git rebase origin/$(git rev-parse --abbrev-ref HEAD)

    # Diff
    d = diff
    dc = diff --cached
    du = "!git -c delta.side-by-side=false diff"
    dcu = "!git -c delta.side-by-side=false diff --cached"

    # Log
    lg = log --oneline --graph --decorate --all
    l = log --oneline --graph --decorate
    contributors = shortlog -sn --all --no-merges

    # Undo
    unstage = reset HEAD --
    undo = reset HEAD~1 --soft

[include]
    path = ~/.gitconfig.personal
{{ if .workEmail }}
[includeIf "gitdir:{{ .workDir | trimSuffix "/" }}/"]
    path = ~/.gitconfig.professional
{{ end }}
