[core]
    editor = nvim
    excludesFile = ~/.gitignore
    autocrlf = input
    filemode = false
	pager = delta

[init]
    defaultBranch = main

[color]
    ui = auto

[diff]
    tool = delta
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
	dark = true

[merge]
    conflictstyle = zdiff3

[rerere]
    enabled = true

[pull]
    rebase = true

[push]
    default = simple
    autoSetupRemote = true

[fetch]
    prune = true

[alias]
    # Status & Info
    s = status
    st = status

    # Branch & Checkout
    co = checkout
    cob = checkout -b
    br = branch

    # Commit
    cm = commit -m
    c = commit
    amend = commit --amend --no-edit
    wip = commit -m "WIP"

    # Add
    a = add
    aa = add .

    # Push & Pull
    p = push
    pl = pull
    pr = pull --rebase
    up = !git fetch origin && git rebase origin/$(git rev-parse --abbrev-ref HEAD)

    # Diff
    d = diff
    df = diff
    dc = diff --cached

    # Log
    lg = log --oneline --graph --decorate --all
    l = log --oneline --graph --decorate

    # Undo
    unstage = reset HEAD --
    undo = reset HEAD~1 --soft

[include]
    path = ~/.gitconfig.local
